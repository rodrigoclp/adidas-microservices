{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2019",
    "outDir": "./dist",
    "moduleResolution": "node",
    "incremental": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
